{
	"compilerOptions": {
		"alwaysStrict": true,
		"esModuleInterop": true,
		"outDir": "build/",
		"typeRoots" : ["src/types/", "./node_modules/@types"],
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		// "moduleResolution": "Node",
		"isolatedModules": true,
		"target": "ES2020",
		"module": "commonjs",
		"baseUrl": ".",
		"paths": {
			"@root/*": ["./src/*"],
			"@controllers": ["./src/controllers/"],
			"@controllers/*": ["./src/controllers/*"],

			"@services": ["./src/services"],
			"@services/*": ["./src/services/*"],

			"@utils/*": ["./src/utils/*"],
			"@enums/*": ["./src/enums/*"],
			"@interfaces/*": ["src/interfaces/*"],


			"@config": ["./src/config/"],
			"@config/*": ["./src/config/*"],
			"@server": ["./src/server/"],
			"@server/*": ["./src/server/*"],
			"@db": ["./src/server/db/"],
			"@db/*": ["./src/server/db/*"],
			"@models/*": ["./src/server/db/models/*"],
			"@lib/*": ["./src/server/lib/*"],
			"@middlewares/*": ["./src/server/middlewares/*"],
			"@routes/*": ["./src/server/routes/*"],
			"@schemas/*": ["./src/server/schemas/*"],
			"@support/*": ["./src/server/support/*"],
			"@errors/*": ["./src/server/util/errors/*"],
			"@workers/*": ["./src/workers/*"],
			"@test/*": ["./test/*"],
			"@fixtures": ["./test/server/fixtures"],
			"@fixtures/*": ["./test/server/fixtures/*"],
			"@mocks": ["./test/server/mocks"],
			"@mocks/*": ["./test/server/mocks/*"]
		}
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["src/client"]
}
